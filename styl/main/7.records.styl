#records
	@extend #content
#recs
	width 100%
	max-width 650px
	margin 0 auto
.recs-links
	text-align: center
	li
		list-style none
		display: inline-block
		position relative
		color myG - 50%
		text-transform: uppercase
		height 40px
		line-height 40px
		width 150px
		margin 0 5px 15px
		// text-shadow: 1px 1px 0 #3E2E14
		transition: all .3s ease
		cursor pointer
		&:before
			content: ''
			position: absolute
			top: 0
			left 0
			bottom 0
			right 0
			width 100%
			height 100%
			// background-color: myG
			background-image: none
			z-index -1
			transform: skewX(-25deg);
			border: 1px solid myG - 50%
		&:hover
			text-decoration: none
			color myG - 50%
			&:before
				background-image: linear-gradient(to top, myG 0%, rgba(myG,.6) 100%)
	.active
		&:before
			background-image: linear-gradient(to top, myG 0%, rgba(myG,.6) 100%)
.recs-container
	box-shadow: 4px -4px 0 rgba(0,0,0,.25)
	border: 1px solid rgba(0,0,0,.1)
	padding 20px
.day-title 
	font-size: 20px
	font-family: DiB
	margin-bottom: 10px
	text-align: center
.day-text
	margin-top: 10px
.text-sale
	margin: 0 0 25px
	font-size: 20px
	text-align: center