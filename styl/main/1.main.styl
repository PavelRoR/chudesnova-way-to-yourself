#main
	padding  0 0 60px
	background-color: #755F3B
	background-image url(../img/main-bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
	position relative
	&:before
		content: ''
		display block
		position: absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
		background-color: rgba(#fff,.5)
		z-index 0
	.container
		position relative
		z-index 9
.main-title
	display: inline-block
	font-size: 48px
	font-family: DiB
	padding 5px 15px
	border: 3px solid
	margin 20px 0 15px
.main-subtitle
	font-size: 28px
	width 100%
	max-width 530px
	margin 0 auto 20px
	&:before
	&:after
		@extend .general-title:after
	&:before
		margin 15px 0 10px
.main-info
	font-size: 22px
	margin-bottom: 10px
	span
		display: inline-block
		font-family: DiB
		font-size: 24px
	&:last-of-type
		margin-bottom: 50px
.button-main
	color myG - 200%
	&:before
		background-image: none
		background-color:  myG