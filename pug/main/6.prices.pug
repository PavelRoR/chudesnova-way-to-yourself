-var full_1 = '4 400р.'
-var full_2 = '6 500р.'
-var full_3 = '11 900р.'

-var sale_1 = '1 000р.'
-var sale_2 = '2 000р.'
-var sale_3 = '4 000р.'

-var today_1 = '3 400р.'
-var today_2 = '4 500р.'
-var today_3 = '7 900р.'

-var link_1 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=4027&clean=true&lg=ru'
-var link_2 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=4031&clean=true&lg=ru'
-var link_3 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=4035&clean=true&lg=ru'

